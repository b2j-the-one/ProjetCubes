<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PROJET CUBES</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    @*@Styles.Render("~/Content/css")*@
    @*@Scripts.Render("~/bundles/modernizr")*@

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Files/cubes.png" style="width:50px;height:50px;" />
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("Publications", "Publications", "Ressources")</li>

                    @if (this.User.IsInRole("SuperAdmin"))
                    {
                        <li>@Html.ActionLink("Utilisateurs", "Index", "Users")</li>
                        <li>@Html.ActionLink("Catégories", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Ressources", "Index", "Ressources")</li>
                        <li>@Html.ActionLink("Publications", "Publications", "Ressources")</li>
                        <li>@Html.ActionLink("Profil", "MyProfile", "Users")</li>

                    }

                    @if (this.User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Utilisateurs", "Index", "Users")</li>
                        <li>@Html.ActionLink("Catégories", "Index", "Categories")</li>
                        <li>@Html.ActionLink("Ressources", "Index", "Ressources")</li>
                        <li>@Html.ActionLink("Publications", "Index", "Publications")</li>
                        <li>@Html.ActionLink("Profil", "MyProfile", "Users")</li>
                    }

                    @if (this.User.IsInRole("Moderateur"))
                    {
                        <li>@Html.ActionLink("Mon profil", "MyProfile", "Users")</li>
                        <li>@Html.ActionLink("Publications", "Index", "Publications")</li>
                    }

                    @if (this.User.IsInRole("Citoyen"))
                    {
                        @*<li>@Html.ActionLink("Mes Publications", "MyPublish", "Ressources")</li>*@
                        <li>@Html.ActionLink("Ressources", "Index", "Ressources")</li>
                        <li>@Html.ActionLink("A propos", "About", "Home")</li>
                        <li>@Html.ActionLink("Nous contacter", "Contact", "Home")</li>
                        @*<li>@Html.ActionLink("Mon profil", "MyProfile", "Users")</li>*@
                        @*<li>@Html.ActionLink("Mes favoris", "", "Publications")</li>
            <li>@Html.ActionLink("Chat", "Index", "Messages")</li>*@
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ressources Reationnelles</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
